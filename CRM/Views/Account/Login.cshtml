@model CRM.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_SignUp.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded-lg pl-4 pr-2 pb-2">
            <div class="text-center">
                <a class="text-light btn btn-primary font-weight-bold" asp-action="SignUp" asp-controller="Account">SingUp</a>
            </div>
            <h6 class="text-success text-center">@TempData["SuccessMessage"]</h6>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Username" class="form-control" autocomplete="off" />
                    <span class="text-danger">@TempData["errorMassege"]</span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input id="Password" type="Password" asp-for="Password" placeholder="Password" class="form-control" autocomplete="off" />
                    <span class="text-danger">@TempData["errorMassege"]</span>
                    <i id="open" class="fa fa-eye  float-right " style="margin-top:-25px; margin-right:6px; cursor:pointer"></i>
                    <i id="closed" class="fa fa-eye-slash  float-right " style="margin-top: -25px; margin-right: 6px; cursor: pointer "></i>

                </div>
                <div>
                    <input type="checkbox" asp-for="IsRemember" />
                    <label asp-for="IsRemember"></label>

                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-block  btn-primary mb-2" value="Log In" />

                </div>

            </form>
            <div class="text-center">
                <a class="text-primary" asp-action="ForgotUsername"> Forgot Username </a>
                <a class="text-primary" asp-action="ForgotPassword"> Forgot Password? </a>

            </div>

        </div>

    </div>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>